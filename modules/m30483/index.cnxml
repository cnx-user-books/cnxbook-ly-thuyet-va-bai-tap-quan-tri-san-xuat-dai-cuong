                              </m:msub>
                              <m:mrow>
                                <m:msub>
                                  <m:mi>L</m:mi>
                                  <m:mstyle fontsize="8pt">
                                    <m:mrow>
                                      <m:mstyle fontstyle="italic">
                                        <m:mrow>
                                          <m:mtext>bt</m:mtext>
                                        </m:mrow>
                                      </m:mstyle>
                                    </m:mrow>
                                  </m:mstyle>
                                </m:msub>
                                <m:mo stretchy="false">+</m:mo>
                                <m:msub>
                                  <m:mi>T</m:mi>
                                  <m:mstyle fontsize="8pt">
                                    <m:mrow>
                                      <m:mstyle fontstyle="italic">
                                        <m:mrow>
                                          <m:mtext>bt</m:mtext>
                                        </m:mrow>
                                      </m:mstyle>
                                    </m:mrow>
                                  </m:mstyle>
                                </m:msub>
                              </m:mrow>
                            </m:mfrac>
                          </m:mrow>
                          <m:mo stretchy="false">=</m:mo>
                          <m:mfrac>
                            <m:mrow>
                              <m:mtext>10</m:mtext>
                              <m:mtext>.</m:mtext>
                              <m:mtext>000</m:mtext>
                            </m:mrow>
                            <m:mrow>
                              <m:mtext>30</m:mtext>
                              <m:mtext>.</m:mtext>
                              <m:mrow>
                                <m:mtext>000</m:mtext>
                                <m:mo stretchy="false">+</m:mo>
