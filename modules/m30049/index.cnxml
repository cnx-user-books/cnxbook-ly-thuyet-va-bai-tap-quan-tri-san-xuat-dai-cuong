                                </m:mrow>
                              </m:mstyle>
                              <m:mstyle fontsize="8pt">
                                <m:mrow>
                                  <m:mrow/>
                                </m:mrow>
                              </m:mstyle>
                            </m:msubsup>
                            <m:mo stretchy="false">=</m:mo>
                            <m:msqrt>
                              <m:mfrac>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mtext>.</m:mtext>
                                  <m:mi>D</m:mi>
                                  <m:mtext>.</m:mtext>
                                  <m:mi>S</m:mi>
                                </m:mrow>
                                <m:mrow>
                                  <m:mi>I</m:mi>
                                  <m:mtext>.</m:mtext>
                                  <m:mi>g</m:mi>
                                </m:mrow>
                              </m:mfrac>
                            </m:msqrt>
                          </m:mrow>
